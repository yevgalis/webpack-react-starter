{
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "./build",
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["dom", "es2017", "dom.iterable"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types", "./src/custom.d.ts"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
