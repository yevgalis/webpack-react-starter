{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "./build",
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es2017",
      "dom.iterable"
    ],
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "src/custom.d.ts"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "types",
    "build",
    "dist"
  ]
}
