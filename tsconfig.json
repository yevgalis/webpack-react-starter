{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "jsx": "react-jsx",
    "lib": ["dom", "es2017", "dom.iterable"],
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types", "src/custom.d.ts"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "types", "build", "src/__survey-modules"]
}
